</Layout>

<script>
	import { virtualizer, setWasmUrl } from "@virtualizer/core"
	setWasmUrl("/items_manager.wasm")
	virtualizer({
		strategy: "fully_observed_list",
		target: "ul"
	}).then(v => v.start())
</script>

<style>
	ul {
		list-style: none;
		border: 2px solid red;
	}

	li {
		padding: 1rem;
		list-style: none;
		border: 2px solid blue;
	}
</style>
