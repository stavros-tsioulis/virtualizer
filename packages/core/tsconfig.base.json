{
  "include": ["./src"],
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2024",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "plugins": [
      { "transform": "ts-macros", "noComptime": true }
    ]
  }
}
